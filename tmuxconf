# TMUX configurations

# Use Vi key bindings to scroll up/down
setw -g mode-keys vi

# status bar colors
setw -g status-bg white
# setw -g status-fg white

# prevents window rename to executed commands
set-option -g allow-rename off

# When a window is deleted, renumber
# Do this on existing tmux session
# movew -r
set-option -g renumber-windows on
